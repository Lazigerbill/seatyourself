
<%= form_for(@restaurant) do |f| %>

	<%= f.label :name %> </br>
	<%= f.text_field :name %> </br>
	<%= f.label :phone %> </br>
	<%= f.text_field :phone %> </br>
	<%= f.label :address %> </br>
	<%= f.text_field :address %> </br>
	<%= f.label :cuisine %> </br>
	<%= f.select(:cuisine, options_for_select([["Please choose"],["Chinese"], ["Thai"],["Mexican"], ["Fusion"], ["Korean"]],@restaurant.cuisine)) %> </br>
	<%= f.label :capacity %> </br>
	<%= f.text_field :capacity %> </br>	
	<%= f.label :picture_url %> </br>
	<%= f.text_field :picture_url %> </br>
	<%= f.label :website %> </br>
	<%= f.text_field :website %> </br>
	<%= f.submit %> </br>

<% end %>